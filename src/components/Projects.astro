---
// Component Imports
import { projects } from '../projects.mjs';
---
<section class="mx-auto mt-6">
    <div class="flex gap-x-6 items-center">
      <h4 class="text-black font-extrabold text-2xl md:text-3xl w-full md:w-52 lg:w-48">âœ¨ Projects</h4>
      <hr class="w-auto md:w-full"/>
    </div>
  
    <ul class=" grid grid-cols-1 md:grid-cols-2 items-stretch gap-6 mt-4">
        {
        projects.map((project, index) => (
          <li class="shadow bg-white p-4 rounded hover:bg-slate-100 hover:shadow-md transition duration-500 ease-in-out">
            <a href={project.url} target="_blank" class="w-full h-full block">
              <div class="flex flex-col justify-between h-full">
                <div>
                  <h5 class={`font-bold text-xl md:text-2xl ${project.color}`}>{project.name}</h5>
                  <p class="text-base font-light mt-3">{project.description}</p>
                </div>
                <div class=" w-max p-2 flex justify-between gap-x-3 mt-3">
                    {
                      project.techs.map((tech) => <img alt="Techology Logo" width="25" height="25" src={`/images/${tech}.png`} />)
                    }
                </div>
              </div>
            </a>
          </li>  
        ))
        }
    </ul>
</section>